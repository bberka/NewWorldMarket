<header>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-color-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NW BIS Market</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">FAQ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-0">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item px-2">
                            <div class="btn-group dropdown">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-mdb-toggle="dropdown" aria-expanded="false">
                                    Order
                                </button>
                                <ul class="dropdown-menu bg-dark ">
                                    @*<li>
                                        <a class="dropdown-item dropdown-item-custom" asp-controller="Order" asp-action="CreateBuyOrder">Create Buy Order</a>
                                    </li>*@
                                    <li>
                                        <a class="dropdown-item dropdown-item-custom" asp-controller="Order" asp-action="UploadItemImage">Create Sell Order</a>
                                    </li>
                                    
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item px-2">
                            <div class="btn-group dropdown">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-mdb-toggle="dropdown" aria-expanded="false">
                                    Hello @User.Identity.Name
                                </button>
                                <ul class="dropdown-menu bg-dark ">
                                    <li>
                                        <a class="dropdown-item dropdown-item-custom" asp-controller="Account" asp-action="Settings">My Account</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item dropdown-item-custom" asp-controller="Account" asp-action="Characters">My Characters</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item dropdown-item-custom" asp-controller="Account" asp-action="MyOrders">My Orders</a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item dropdown-item-custom" asp-controller="Account" asp-action="Logout">Logout</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        
                    }
                    else
                    {
                        <li class="nav-item px-2">
                            <a class="btn btn-link hover-shadow" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>