@model NewWorld.BiSMarket.Core.Models.Register

@{
    ViewData["Title"] = "Register";
}



<div class="container">
    <h1 class="text-light">Register</h1>
    <hr class=" text-light"/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group py-2">
                    <label asp-for="Username" class="control-label text-light"></label>
                    <input asp-for="Username" type="text" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group py-2">
                    <label asp-for="Password" class="control-label text-light"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group py-2">
                    <label asp-for="PasswordConfirm" class="control-label text-light"></label>
                    <input asp-for="PasswordConfirm" type="password" class="form-control" />
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <div class="form-group py-2">
                    <label asp-for="Email" class="control-label text-light"></label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <input type="submit" value="Register" class="btn btn-info w-50" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
